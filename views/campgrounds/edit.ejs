<% layout("layouts/boilerplate") %>
    <h1 class="text-center">Edit Campground</h1>
    <div class="col-md-6 offset-md-3">
        <form action="/campgrounds/<%=campground._id %>?_method=PUT" method="post" class="validated-form" novalidate enctype="multipart/form-data">
            <div class="mb-2">
                <label for="title" class="form-label">Title</label>
                <input type="text" class="form-control" name="campground[title]" id="title" required
                    value="<%=campground.title %>">
                <div class="valid-feedback">
                    Looks good!
                </div>
            </div>
            <div class="mb-2">
                <label for="location" class="form-label">Location</label>
                <input type="text" class="form-control" name="campground[location]" id="location" required
                    value="<%=campground.location %>">
                <div class="valid-feedback">
                    Looks good!
                </div>
            </div>
            <div class="mb-2">
                <label for="price" class="form-label">Price</label>
                <div class="input-group">
                    <span class="input-group-text" id="price-label">$</span>
                    <input type="text" id="price" class="form-control" name="campground[price]" placeholder="0.00"
                        aria-label="price" aria-describedby="price-label" required value="<%=campground.price %>">
                        <div class="valid-feedback">
                            Looks good!
                        </div>
                    </div> 
            </div>
            <div class="mb-2">
                <label for="description" class="form-label">Description</label>
                <textarea type="text" class="form-control" name="campground[description]" id="description"
                    required><%=campground.description %></textarea>
                <div class="valid-feedback">
                    Looks good!
                </div>
            </div>
            <div class="mb-2">
                <label for="image" class="form-label">Add Images</label>
                <input type="file" class="form-control" id="image" name="image" multiple>
            </div>
            <div class="mb-2">
                <% campground.images.forEach(function(img, i) { %>
                    <img src="<%=img.thumbnail %>" class="img-thumbnail"  alt="">
                    <div class="form-check-inline">
                        <input type="checkbox" class="form-check-input" name="deleteImages[]" id="image-<%=i %>" value="<%=img.filename %>">
                        <label for="image-<%=i %>" class="form-check-label">Delete</label>    
                    </div>
                    <% }); %>
            </div>
            <div class="mb-2"><button class="btn btn-info">Update campground</button>
            </div>
        </form>

        <a href="/campgrounds/<%=campground._id %>">Return to Campground</a>
    </div>